@page "{id}"
@model FoodDelivery.FrontEnd.Pages.Restaurants.ViewModel
@{
    if(Model.Message != null)
    {
        <h1 style="color:red">@Model.Message</h1>
    }
    else
    {
        <h3>Hello!</h3>
<a class="btn btn-primary" asp-page="/Restaurants/Index">Back</a>

<h4>Information about: @Model.Restaurant.RestaurantName</h4><br />
<p>Restaurant address: @Model.Restaurant.RestaurantAddress</p>
<p>Zone: @Model.Restaurant.Zone?.ZoneName</p>
<p>Category name: @Model.Restaurant.CategoryNameNavigation?.CategoryName</p>
<p>Description: @Model.Restaurant.CategoryNameNavigation?.CategoryDescription</p>
<br />

<h3>Menu:</h3>
<table class="table">
  <thead class="thead-dark">
     <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col">18+</th>
     </tr>
  </thead>
    @{
        if(Model.Restaurant.Dishes != null)
        {
        
        int i = 1;
        foreach(var item in Model.Restaurant.Dishes)
        {
            string require;
            if(item.Require18 == true)
            {
                require = "Yes";
            }
            else
            {
                require = "No";
            }
            <tbody>
          <tr>
            <th scope="row">@i</th>
            <td>@item.DishName</td>
            <td>@item.DishDescription</td>
            <td>@item.Price</td>
            <td>@require</td>
          </tr>
            </tbody>
        i += 1;
        }
}
}
</table>
<br />
<a class="btn btn-primary" href="/Restaurants">Back</a>
    }
}

