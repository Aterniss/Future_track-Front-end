@page
@using Microsoft.AspNetCore.Components.Web
@model FoodDelivery.FrontEnd.Pages.Restaurants.IndexModel
@{
    ViewData["Title"] = "Restaurants";

}
<h3>Restaurants</h3>

<table class="table">
  <thead class="thead-dark">
     <tr>
        <th scope="col">#</th>
        <th scope="col">Restaurant name</th>
        <th scope="col">Food category</th>
        <th scope="col">Description</th>
     </tr>
  </thead>
@{
    int i = 1;

    foreach(var item in Model.Restaurants){
        
        
            <tbody>
          <tr>
          
            <th scope="row">@i</th>
            <td>
            <a asp-page="/Restaurants/View" asp-route-id="@item.RestaurantId">
            @item.RestaurantName</a>
            </td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryNameNavigation.CategoryDescription</td>
          </tr>
            </tbody>
        i += 1;
    }
}
</table>