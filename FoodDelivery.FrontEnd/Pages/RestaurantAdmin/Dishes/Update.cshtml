@page "{id},{name}, {desc}, {restaurant}, {price}, {require}"
@model FoodDelivery.FrontEnd.Pages.RestaurantAdmin.Dishes.UpdateModel
@{
}
<h3>Update Dish:</h3>
<br />

<a class="btn btn-primary" asp-page="/RestaurantAdmin/Dishes/Index">Back</a>
<br />
<br />
<form method="post">
  <div class="form-group">
    <label for="DishName">Dish name</label>
    <input type="text" class="form-control" id="DishName" name="DishName" value="@Model.DishName" required >
  </div>
  <div class="form-group">
    <label for="DishDescription">Dish description</label>
    <input type="text" class="form-control" id="DishDescription" name="DishDescription" value="@Model.DishDescription" required>
  </div>
  <div class="form-group">
    <label for="Price">Price</label>  
    <input type="number" step="0.01" class="form-control" id="Price" name="Price" placeholder="0,00" required>
  </div>
  <br />
   <div class="form-group">
    <label for="Require18">Require 18?</label>
        @{
            if(@Model.Require18 == true)
            {
                            <input type="checkbox" id="Require18" name="Require18" value="true" checked>
            }
            else
            {
                          <input type="checkbox" id="Require18" name="Require18" value="true">  
            }
        }
  </div>
  <br />
  <input type="submit" value="Submit"  class="btn btn-success" asp-page-handler="Submit">
</form>
@{
    if(@Model.Message != null)
    {
    <p style="color:red">@Model.Message</p>
    }
}