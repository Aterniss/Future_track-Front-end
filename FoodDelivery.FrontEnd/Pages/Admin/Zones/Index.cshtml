@model FoodDelivery.FrontEnd.Pages.Admin.Zones.IndexModel
@{
    if(@Model.Message == null)
    {
        <h3>Zones:</h3>
        <a class="btn btn-primary" asp-page="/Admin/Index">Back</a>
        <a class="btn btn-success" asp-page="/Admin/Zones/Add">Add new zone</a>
        <table class="table">
          <thead class="thead-dark">
             <tr>
                <th scope="col">#</th>
                <th scope="col">Zone ID</th>
                <th scope="col">Zone name</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
             </tr>
          </thead>
  @{
    int i = 1;
    if(Model.Zones != null){
    foreach(var item in Model.Zones){
      <tbody>
        <tr>
           <th scope="row">@i</th>
           <td>@item.ZoneId</td>
           <td>@item.ZoneName</td>
           <td style="border: 1px solid yellow; background-color:lightgoldenrodyellow">
           <a asp-page="/Admin/Zones/Update" asp-route-id="@item.ZoneId" asp-route-name="@item.ZoneName" style="text-decoration:none; color:green;">
           Update</a></td>
           <td style="border:1px solid red; background-color:palevioletred">
           <a asp-page="/Admin/Zones/Delete" asp-route-id="@item.ZoneId" style="text-decoration:none; color:black;">
            Delete</a></td>
           </tr>
           </tbody>
        i += 1;
    }
   }
}
        </table>

    }
    else
    {
        <h1>@Model.Message</h1>
    }
}
