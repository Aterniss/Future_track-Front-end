@page
@model FoodDelivery.FrontEnd.Pages.Admin.Users.UpdateModel
@{
}
<h3>Update user:</h3>
<br />

<a class="btn btn-primary" asp-page="/Admin/Users/Index">Back</a>
<br />
<br />
<form method="post">
  <div class="form-group">
    <label for="FullName">Full name</label>
    <input type="text" class="form-control" id="username" name="FullName" value="@Model.User.FullName" required >
  </div>
  <div class="form-group">
    <label for="userAddress">User address</label>
    <input type="text" class="form-control" id="userAddress" name="UserAddress" value="@Model.User.UserAddress" required>
  </div><br />
   <div class="form-group">
    <label for="isOver18">Is over 18?</label>
    @{
            @if(Model.User.IsOver18 == true)
            {
                <input type="checkbox" id="IsOver18" name="IsOver18" value="true" checked>
            }
            else
            {
                <input type="checkbox" id="IsOver18" name="IsOver18" value="true">
            }

     }
    
  </div>
  <br />
  <input type="submit" value="Submit"  class="btn btn-success" asp-page-handler="Submit">
</form>