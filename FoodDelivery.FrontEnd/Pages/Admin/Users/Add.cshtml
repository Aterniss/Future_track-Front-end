@page
@model FoodDelivery.FrontEnd.Pages.Admin.Users.AddModel
@{
}

<h3>Add new user:</h3>
<br />

<a class="btn btn-primary" asp-page="/Admin/Users/Index">Back</a>
<br />
<br />

<form method="post">
  <div class="form-group">
    <label for="FullName">Full name</label>
    <input type="text" class="form-control" id="username" name="FullName" placeholder="Enter full name" required >
  </div>
  <div class="form-group">
    <label for="userAddress">User address</label>
    <input type="text" class="form-control" id="userAddress" name="UserAddress" placeholder="Enter your address" required>
  </div><br />
   <div class="form-group">
    <label for="isOver18">Is over 18?</label>
    <input type="checkbox" id="IsOver18" name="IsOver18" value="true">
  </div>
  <br />
  <input type="submit" value="Submit"  class="btn btn-success" asp-page-handler="Submit">
</form>
@{
    if(@Model.Message != null)
    {
    <p style="color:red">@Model.Message</p>
    }
}