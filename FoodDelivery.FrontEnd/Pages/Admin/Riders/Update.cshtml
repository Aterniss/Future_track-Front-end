@page "{id}, {name}, {zone}"
@model FoodDelivery.FrontEnd.Pages.Admin.Riders.UpdateModel
@{
}
<h3>Update Rider:</h3>
<br />

<a class="btn btn-primary" asp-page="/Admin/Riders/Index">Back</a>
<br />
<br />
<form method="post">
  <div class="form-group">
    <label for="RiderName">Rider name</label>
    <input type="text" class="form-control" id="RiderName" name="RiderName" value="@Model.Name" maxlength="50" required>
  </div><br />
  <div class="form-group">
    <label for="ZoneId">Zone</label>
    <select name="ZoneId">
            @{
                if(Model.Zones != null)
                {
                    @foreach(var item in Model.Zones)
                    {
                        <option value="@item.ZoneId">@item.ZoneName</option>
                    }
                }
                else
                {
                    <option value="null">NULL</option>
                }
            }
    </select>
  </div><br />
  <br />
  <input type="submit" value="Submit"  class="btn btn-success" asp-page-handler="Submit">
</form>
@{
    if(@Model.Message != null)
    {
    <p style="color:red">@Model.Message</p>
    }
}
