@page
@model FoodDelivery.FrontEnd.Pages.Admin.Orders.IndexModel
@{
}
<h3>Orders:</h3>
<a class="btn btn-primary" asp-page="/Admin/Index">Back</a>
<table class="table">
  <thead class="thead-dark">
     <tr>
        <th scope="col">#</th>
        <th scope="col">Order ID</th>
        <th scope="col">Order status</th>
        <th scope="col">Created at</th>
        <th scope="col">More info</th>
        <th scope="col">Delete</th>
     </tr>
  </thead>
  @{
    int i = 1;
    if(Model.Orders != null){
    foreach(var item in Model.Orders){
        <tbody>
          <tr>
             <th scope="row">@i</th>
             <td>@item.OrderId</td>
             <td>@item.OrderStatus</td>
             <td>@item.CreatedAt</td>
             <td style="border: 1px solid blue; background-color:lightblue">
             <a asp-page="/Admin/Orders/MoreInfo" asp-route-id="@item.OrderId" style="text-decoration:none; color:dimgrey;">View</a></td>
             <td style="border:1px solid red; background-color:palevioletred">
             <a asp-page="/Admin/Orders/Delete" asp-route-id="@item.OrderId" style="text-decoration:none; color:black;">Delete</a></td>
             </tr>
       </tbody>
        i += 1;
    }
   }
}
</table>