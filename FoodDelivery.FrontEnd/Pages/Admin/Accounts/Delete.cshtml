@page
@model FoodDelivery.FrontEnd.Pages.Admin.Accounts.DeleteModel
@{
    if(Model.Message != null)
    {
        <h1 style="color:red">@Model.Message</h1>
        <br /><br />
        <a class="btn btn-primary" asp-page="/Admin/Accounts/Index">Back</a>
    }
    else
    {
      <h3>Are you sure that you want to delete?</h3><br /><br />
        <form method="post">
        <input class="btn btn-primary" value="Back" type="submit" asp-page-handler="Back">
        <input class="btn btn-success" value="Delete" type="submit" asp-page-handler="Delete" asp-route-id="@Model.Id">
        </form>  
    }
}
