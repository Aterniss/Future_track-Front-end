@page
@model FoodDelivery.FrontEnd.Pages.Admin.Accounts.IndexModel
@{
    if(Model.Message == null)
    {
        <h3>Dishes:</h3>
<a class="btn btn-primary" asp-page="/Admin/Index">Back</a>
<a class="btn btn-success" asp-page="/Admin/Accounts/Add">Add role</a>
<table class="table">
  <thead class="thead-dark">
     <tr>
        <th scope="col">#</th>
        <th scope="col">Account ID</th>
        <th scope="col">Username</th>
        <th scope="col">E-mail</th>
        <th scope="col">Premission</th>
        <th scope="col">View</th>
        <th scope="col">Delete</th>
     </tr>
  </thead>
  @{
    int i = 1;
    if(Model.Accounts != null){
    foreach(var item in Model.Accounts){
      <tbody>
        <tr>
           <th scope="row">@i</th>
           <td>@item.Id</td>
           <td>@item.UserName</td>
           <td>@item.EmailAddress</td>
           <td>@item.RoleNavigation.RoleName</td>
           <td style="border: 1px solid blue; background-color:lightblue">
             <a asp-page="/Admin/Accounts/MoreInfo" asp-route-id="@item.Id" style="text-decoration:none; color:dimgrey;">View</a></td>
           <td style="border:1px solid red; background-color:palevioletred">
           <a asp-page="/Admin/Accounts/Delete" asp-route-id="@item.Id" style="text-decoration:none; color:black;">Delete</a></td>
           </tr>
           </tbody>
        i += 1;
    }
   }
}
        </table>
    }
    else
    {
        <h1>@Model.Message</h1>
    }
}