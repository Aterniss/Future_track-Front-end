@page
@model FoodDelivery.FrontEnd.Pages.Admin.Restaurants.IndexModel
@{
    if(Model.Message != null)
    {
        <h1 style="color:red">@Model.Message</h1>
    }
    else
    {
        <h3>Restaurants:</h3>
<a class="btn btn-primary" asp-page="/Admin/Index">Back</a>
<a class="btn btn-success" asp-page="/Admin/Restaurants/Add">Add new restaurant</a>
<br /> <br />
<table class="table">
  <thead class="thead-dark">
     <tr>
        <th scope="col">#</th>
        <th scope="col">Restaurant ID</th>
        <th scope="col">Restaurant name</th>
        <th scope="col">More info</th>
        <th scope="col">Update</th>
        <th scope="col">Delete</th>
     </tr>
  </thead>
  @{
    int i = 1;
    if(Model.Restaurants != null){
    foreach(var item in Model.Restaurants){
        <tbody>
          <tr>
             <th scope="row">@i</th>
             <td>@item.RestaurantId</td>
             <td>@item.RestaurantName</td>
             <td style="border: 1px solid blue; background-color:lightblue">
             <a asp-page="/Admin/Restaurants/MoreInfo" asp-route-id="@item.RestaurantId" style="text-decoration:none; color:dimgrey;">View</a></td>
             <td style="border: 1px solid yellow; background-color:lightgoldenrodyellow">
             <a asp-page="/Admin/Restaurants/Update" asp-route-id="@item.RestaurantId" asp-route-restName="@item.RestaurantName" asp-route-cat="@item.CategoryName" asp-route-address="@item.RestaurantAddress" asp-route-zone="@item.ZoneId" style="text-decoration:none; color:green;">Update</a></td>
             <td style="border:1px solid red; background-color:palevioletred">
             <a asp-page="/Admin/Restaurants/Delete" asp-route-id="@item.RestaurantId" style="text-decoration:none; color:black;">Delete</a></td>
             </tr>
       </tbody>
        i += 1;
    }
   }
}
</table>
    }
}
